#!/bin/sh

# Aliases
alias du="du -h" # Always show sizes in a human readable format
alias up="sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y" # Upgrade and clean
alias ofzf='xdg-open "$(fzf)"' # Search for a file and open it
alias o="xdg-open" # Open a file
alias lsp="stat -c '%a %n' *" # Print the numeric access rights to all objects in a folder
alias pa-restart="pulseaudio -k && pulseaudio --start" # Restart pulseaudio
alias untar="tar -xavf" # Extract tar files based on their file extension
alias mine="sudo chown $USER:$USER" # Make a object yours
alias localip='ip addr show | sed -n "/\(wl.\+\|en.\+\)state UP/,/valid_lft/p" | rg inet | rg -o "([0-9]{1,3}\.*){4}" | head -n 1' # Print ip of your machine on the local network
alias git-acp='git add -A && git commit -m "no message" && git pull && git push' # Git add, commit, pull and push because sometimes I can't be bothered
alias oaky='cd ~/Code/oaky/$(ls ~/Code/oaky | fzf)'
alias oakyo='vim $(ls ~/Code/oaky | fzf)'
alias ifzf='flatpak run $(flatpak list --columns=ref --ostree-verbose | fzf)'

alias vim='nvim'
alias evim='vim ~/Code/dotfiles/init.vim'

# Docker
alias dstart='docker start $(docker ps --all --filter status=exited --format "{{.Names}}" | fzf -m)'
alias dstop='docker stop $(docker ps --format "{{.Names}}" | fzf -m)'
alias drestart='docker restart $(docker ps --format "{{.Names}}" | fzf -m)'
alias dremove='docker rm $(docker ps --all --format "{{.Names}}" | fzf -m)'
alias dexec='docker exec -it $(docker ps --format "{{.Names}}" | fzf) bash'
alias dlogs='docker logs -f $(docker ps --all --format "{{.Names}}" | fzf)'
alias dkill='docker kill $(docker ps --all --format "{{.Names}}" | fzf -m)'

# Oaky
alias gt='firefox --new-tab $(echo "https://dashboard-accp-1.staging.dev.getoaky.com\nhttps://onboarding-accp-1.staging.dev.getoaky.com/\nhttps://app-accp-1.staging.dev.getoaky.com\nhttps://multi-property-accp-1.staging.dev.getoaky.com\nhttps://api-accp-1.staging.dev.getoaky.com/adminpanel/login\nhttps://dashboardv2-accp-1.staging.dev.getoaky.com\nhttps://ui-kit-accp-1.staging.dev.getoaky.com" | fzf)'

alias \?="rg alias /home/$USER/.aliases | head -n -1 | sed 's/^alias //'"
