set $mod Mod4

font pango:Roboto Mono for Powerline 14

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Return exec termite

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+d exec rofi -show drun

# move focus of windows
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused window
bindsym $mod+f fullscreen toggle

# change window layout (tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# open empty window
bindsym $mod+o open

# workspace variables
set $w1 1
set $w2 2
set $w3 3
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w0 10

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# window visual settings
# type                          border  background      text    indicator
client.focused                  #1d1f21 #1d1f21         #81a2be #1b1918
client.focused_inactive         #1d1f21 #1d1f21         #c5c8c6 #1b1918
client.unfocused                #1d1f21 #1d1f21         #c5c8c6 #1b1918
client.urgent			#1d1f21 #1d1f21		#c5c8c6 #1b1918

# Start i3bar to display a workspace bar
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        position bottom
        colors {
                # Whole color settings
                background #1d1f21

                # type                  border  background      text
                focused_workspace       #1d1f21 #1d1f21         #81a2be
                active_workspace        #1d1f21 #1d1f21         #c5c8c6
                inactive_workspace      #1d1f21 #1d1f21         #c5c8c6
                urgent_workspace	#1d1f21	#1d1f21		#c5c8c6
        }
}

# set settings
exec --no-startup-id amixer set Master mute
exec --no-startup-id xset r rate 250 40
exec --no-startup-id xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Natural Scrolling Enabled' 1
exec --no-startup-id xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Tapping Enabled' 1
exec --no-startup-id xinput set-prop 'Magic Mouse ' 'libinput Natural Scrolling Enabled' 1
exec --no-startup-id setxkbmap -model pc104 -layout us -variant alt-intl

# start apps
exec --no-startup-id feh --bg-scale ~/Images/Backgrounds/disposableLeftXO.png
exec --no-startup-id compton -b
exec --no-startup-id dunst

# set other keys
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 10- on
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 10+ on
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle
bindsym XF86MonBrightnessDown exec --no-startup-id lux -s 10%
bindsym XF86MonBrightnessUp exec --no-startup-id lux -a 10%
